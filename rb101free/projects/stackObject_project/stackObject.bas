' Stack object' ============'' by Neal Collins (runbasic@staddle.net)'' Example usage:'' run "stackObject.bas", #mystack' #mystack initialise()' #mystack push$("hello")' #mystack push$("world")' print #mystack peek$()' print #mystack pop$()' print #mystack pop$()' print #mystack hasdata() dim stack$(500) global stack$, stackTop ' Initialise the object' ---------------------function initialise()  stackTop = -1end function ' Push an item onto the stack' ---------------------------function push$(item$)   stackTop = stackTop + 1   stack$(stackTop) = item$end function ' Return the top item on the stack without removing it' ----------------------------------------------------function peek$()   peek$ = stack$(stackTop) end function ' Return the top item on the stack and remove it from the stack' -------------------------------------------------------------function pop$()   if stackTop >= 0 then     pop$ = stack$(stackTop)     stackTop = stackTop - 1  else     pop$ = ""   end ifend function  ' Return 1 if the stack is not empty, otherwise 0' -----------------------------------------------function hasdata()   if stackTop >= 0 then     hasdata = 1  else     hasdata = 0   end if end function